{
  "name": "monokle",
  "version": "1.3.2",
  "author": "Kubeshop",
  "description": "UI for managing k8s manifests",
  "homepage": "./",
  "main": "build/electron/main.js",
  "contributors": [
    "ole@kubeshop.io",
    "steen@kubeshop.io",
    "andrei@kubeshop.io",
    "catalin@kubeshop.io",
    "thomas@kubeshop.io",
    "sierra@kubeshop.io"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/kubeshop/monokle.git"
  },
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@craco/craco": "6.3.0",
    "@testing-library/jest-dom": "5.14.1",

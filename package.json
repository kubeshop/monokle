    "@types/electron-devtools-installer": "2.2.0",
    "@types/jest": "27.0.1",
    "@types/luxon": "2.0.5",
    "@types/micromatch": "4.0.2",
    "@types/module-alias": "2.0.1",
    "@types/node": "16.10.2",
    "@types/node-fetch": "2.5.12",
    "@types/react": "17.0.18",
    "@types/react-dom": "17.0.9",
    "@types/redux-logger": "3.0.9",
    "@types/shelljs": "0.8.9",
    "@types/styled-components": "5.1.12",
    "@types/uuid": "8.3.1",
    "@types/yargs": "17.0.2",
    "concurrently": "6.3.0",
    "craco-alias": "3.0.1",
    "craco-less": "1.20.0",
    "cross-env": "7.0.3",
    "electron": "15.3.2",
    "electron-builder": "22.11.11",
    "electron-notarize": "1.1.1",
    "electron-reload": "2.0.0-alpha.1",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.26.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-unused-imports": "1.1.5",
    "file-loader": "6.2.0",
    "husky": "7.0.2",
    "lint-staged": "11.2.6",
    "monaco-editor-webpack-plugin": "4.1.1",
    "prettier": "2.4.1",
    "react-scripts": "4.0.3",
    "redux-devtools-extension": "2.13.9",
    "standard-version": "9.3.1",
    "stylelint": "13.13.1",
    "stylelint-config-recommended": "5.0.0",
    "stylelint-config-standard": "22.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.10.0",
    "typescript": "4.3.5",
    "wait-on": "6.0.0"
  },
  "dependencies": {
    "@ant-design/icons": "4.7.0",
    "@kubernetes/client-node": "0.16.0",
    "@reduxjs/toolkit": "1.6.2",
    "@rjsf/antd": "3.2.1",
    "@rjsf/core": "3.2.1",
    "@trodi/electron-splashscreen": "1.0.2",
    "@types/async": "3.2.9",
    "@types/flat": "5.0.2",
    "@types/lodash": "4.14.176",
    "ajv": "6.12.6",
    "antd": "4.16.13",
    "async": "3.2.1",
    "chokidar": "3.5.2",
    "dagre": "0.8.5",
    "electron-devtools-installer": "3.2.0",
    "electron-log": "4.4.1",
    "electron-redux": "1.5.4",
    "electron-store": "8.0.1",
    "electron-updater": "4.6.1",
    "es6-tween": "5.5.11",
    "execa": "5.1.1",
    "fast-deep-equal": "3.1.3",
    "flat": "5.0.2",
    "jsonpath-plus": "6.0.1",
    "lodash": "4.17.21",
    "loglevel": "1.7.1",
    "luxon": "2.0.2",
    "micromatch": "4.0.4",
    "module-alias": "2.2.2",
    "monaco-yaml": "3.2.1",
    "node-fetch": "2.6.5",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-flow-renderer": "9.6.11",
    "react-hotkeys-hook": "3.4.4",
    "react-monaco-editor": "0.44.0",
    "react-redux": "7.2.5",
    "react-use": "17.3.1",
    "redux": "4.1.1",
    "redux-logger": "3.0.6",
    "redux-thunk": "2.3.0",
    "reselect": "4.0.0",
    "shell-path": "2.1.0",
    "shelljs": "0.8.4",
    "strip-ansi": "6.0.1",
    "styled-components": "5.3.1",
    "tar": "6.1.11",
    "type-fest": "2.5.1",
    "uuid": "8.3.2",
    "web-vitals": "2.1.2",
    "worker-loader": "3.0.8",
    "yaml": "2.0.0-8",
    "yargs": "17.2.1"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco --max_old_space_size=4096 build",
    "test": "craco test --watchAll=false",
    "postinstall": "electron-builder install-app-deps",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm run start\" \"wait-on http://localhost:3000 && tsc -p electron -w\" \"wait-on http://localhost:3000 && tsc -p electron && cross-env NODE_ENV=development electron .\"",
    "electron:debug": "concurrently \"cross-env BROWSER=none npm run start\" \"wait-on http://localhost:3000 && tsc -p electron -w\" \"wait-on http://localhost:3000 && tsc -p electron && cross-env NODE_ENV=development electron --remote-debugging-port=9223 .\"",
    "electron:build": "npm run build && tsc -p electron && electron-builder --publish \"never\"",
    "electron:build:mac": "npm run build && tsc -p electron && electron-builder --publish \"never\" && (ls -alh dist | grep Monokle && du -sh dist/mac || true)",
    "electron:build:ci": "npm run build && tsc -p electron",
    "eject": "react-scripts eject",
    "lint": "npm run lint:config && npm run lint:src ",
    "stylelint": "stylelint  \"./src/**/*.tsx\"",
    "lint:config": "eslint .",
    "lint:src": "eslint \"{src,test}/**/*.{js,jsx,ts,tsx}\"",
    "lintfix": "eslint --fix \"{src,test}/**/*.{js,jsx,ts,tsx}\"",
    "precommit": "npm run lint",
    "format:all": "prettier --write \"{src,test}/**/*.{js,jsx,ts,tsx}\"",
    "prepare": "husky install",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major"
  },
  "build": {
    "appId": "io.kubeshop.monokle",
    "productName": "Monokle",
    "copyright": "Copyright Â© 2021 ${author}",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "build/icon.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "./electron/src/entitlements.mac.inherit.plist",
      "entitlementsInherit": "./electron/src/entitlements.mac.inherit.plist",
      "target": [
        {
          "target": "default",
          "arch": [
            "universal"
          ]
        }
      ]
    },
    "artifactName": "${productName}-${os}-${version}-${arch}.${ext}",
    "afterSign": "./notarization/afterSignHook.js",
    "dmg": {
      "icon": "build/icon.png",
      "writeUpdateInfo": true
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "differentialPackage": true,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "createDesktopShortcut": false,
      "menuCategory": "Kubeshop",
      "shortcutName": "Monokle"
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "category": "Development",
      "maintainer": "Kubeshop",
      "vendor": "Kubeshop",
      "executableName": "Monokle",
      "synopsis": "Your kubernetes best friend!",
      "description": "A free, open-source tool, to help you navigate kubernetes development. By Kubeshop."
    },
    "appImage": {
      "artifactName": "${productName}-${os}-${version}-${arch}.${ext}"
    },
    "deb": {
      "packageCategory": "Kubeshop",
      "priority": "standard"
    },
    "extends": null,
    "files": [
      "build/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!**/node_modules/eslint*/**/*",
      "!**/node_modules/@testing-library/**/*",
      "!**/node_modules/@typescript-eslint/**/*",
      "!**/node_modules/typescript/**/*",
      "!**/node_modules/*webpack*/**/*",
      "!**/node_modules/less/**/*",
      "!**/node_modules/babel-runtime/**/*",
      "!**/node_modules/yaml-language-server/lib/umd/**/*",
      "!**/node_modules/antd/es/**/*",
      "!**/node_modules/@jest/**/*",
      "!**/node_modules/monaco-editor/min/**/*",
      "!**/node_modules/monaco-editor/min-maps/**/*",
      "!**/docs/**/*",
      "!notarization/**/*"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources"
      },
      {
        "from": "resources/darwin",
        "to": "app"
      },
      {
        "from": "resources",
        "to": "app"
      }
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      "last 1 chrome version"
    ],
    "development": [
      "last 1 chrome version"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "@models/(.+)": "<rootDir>/src/models/$1",
      "@redux/(.+)": "<rootDir>/src/redux/$1",
      "@src/(.+)": "<rootDir>/src/$1"
    }
  }
}

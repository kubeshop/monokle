{
  "name": "monokle",
  "version": "0.0.5",
  "author": "Kubeshop",
  "description": "UI for managing k8s manifests",
  "homepage": "./",
  "main": "build/electron/main.js",
  "contributors": [
    "ole@kubeshop.io",
    "steen@kubeshop.io",
    "andrei@kubeshop.io",
    "catalin@kubeshop.io",
    "thomas@kubeshop.io",
    "sierra@kubeshop.io"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/kubeshop/monokle.git"
  },
  "private": true,
  "devDependencies": {
    "@types/dagre": "^0.7.44",
    "@types/styled-components": "^5.1.10",
    "@types/uuid": "^8.3.1",
    "concurrently": "^6.2.0",
    "craco-alias": "^3.0.1",
    "cross-env": "^7.0.3",
    "electron": "^13.1.6",
    "electron-builder": "^22.11.7",
    "eslint-config-airbnb": "~18.2.1",
    "eslint-config-prettier": "~8.3.0",
    "eslint-plugin-import": "~2.22.1",
    "eslint-plugin-jsx-a11y": "~6.4.1",
    "eslint-plugin-prettier": "~3.4.0",
    "eslint-plugin-react": "~7.22.0",
    "eslint-plugin-react-hooks": "~4.2.0",
    "eslint-plugin-unused-imports": "^1.1.1",
    "file-loader": "^6.1.1",
    "husky": "^6.0.0",
    "prettier": "2.3.0",
    "wait-on": "^5.3.0"
  },
  "dependencies": {
    "@ant-design/icons": "4.6.2",
    "@craco/craco": "6.1.2",
    "@kubernetes/client-node": "^0.15.0",
    "@reduxjs/toolkit": "^1.6.0",
    "@rjsf/antd": "^3.0.0",
    "@rjsf/core": "^3.0.0",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^13.1.9",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/jest": "^26.0.23",
    "@types/micromatch": "^4.0.1",
    "@types/node": "^15.6.1",
    "@types/react": "^17.0.8",
    "@types/react-dom": "^17.0.5",
    "@types/redux-logger": "^3.0.8",
    "antd": "4.16.6",
    "chokidar": "^3.5.2",
    "craco-less": "^1.18.0",
    "dagre": "^0.8.5",
    "electron-devtools-installer": "^3.2.0",
    "electron-is-dev": "^2.0.0",
    "electron-reload": "^1.5.0",
    "es6-tween": "^5.5.11",
    "jsonpath-plus": "^5.0.7",
    "loglevel": "^1.7.1",
    "micromatch": "^4.0.4",
    "monaco-editor-webpack-plugin": "^4.0.0",
    "monaco-yaml": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-flow-renderer": "^9.6.0",
    "react-monaco-editor": "0.43.0",
    "react-redux": "^7.2.4",
    "react-scripts": "4.0.3",
    "react-use": "17.2.4",
    "redux": "^4.1.0",
    "redux-devtools-extension": "^2.13.9",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "shell-path": "^2.1.0",
    "styled-components": "5.3.0",
    "typescript": "^4.3.2",
    "uuid": "^3.4.0",
    "web-vitals": "^1.1.2",
    "worker-loader": "^3.0.8",
    "yaml": "2.0.0-6"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test --watchAll=false",
    "postinstall": "electron-builder install-app-deps",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm run start\" \"wait-on http://localhost:3000 && tsc -p electron -w\" \"wait-on http://localhost:3000 && tsc -p electron && electron .\"",
    "electron:build": "npm run build && tsc -p electron && electron-builder",
    "eject": "react-scripts eject",
    "lint": "npm run lint:config && npm run lint:src ",
    "lint:config": "eslint .",
    "lint:src": "eslint \"{src,test}/**/*.{js,jsx,ts,tsx}\"",
    "lintfix": "eslint --fix \"{src,test}/**/*.{js,jsx,ts,tsx}\"",
    "precommit": "npm run lint && npm test",
    "prepare": "husky install"
  },
  "build": {
    "appId": "io.kubeshop.monokle",
    "productName": "Monokle",
    "copyright": "Copyright Â© 2021 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "extends": null,
    "files": [
      "build/**/*"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources"
      }
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "lint-staged": {
    "\"{src,test}/**/*.{js,jsx,ts,tsx}\"": [
      "eslint \"{src,test}/**/*.{js,jsx,ts,tsx}\" --fix",
      "git add"
    ],
    ".": [
      "eslint . --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "@models/(.+)": "<rootDir>/src/models/$1",
      "@redux/(.+)": "<rootDir>/src/redux/$1",
      "@src/(.+)": "<rootDir>/src/$1"
    }
  }
}
